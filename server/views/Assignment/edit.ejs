<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for the edit Operation-->

<div class="container my-5 p-4 bg-dark text-white rounded shadow">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <h1 class="text-center text-danger mb-4"><%= title %></h1>
            <form method="POST" class="needs-validation">
                <!-- Assignment Title -->
                <div class="mb-3">
                    <label for="nameTextField" class="form-label">Assignment Title</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Assignment Title" name="Name" value="<%= Assignment.Name %>" required>
                </div>

                <!-- Due Date -->
                <div class="mb-3">
                    <label for="dueTextField" class="form-label">Due Date</label>
                    <input  type="text"  class="form-control"  id="dueTextField" placeholder="Enter the Due Date" name="Due" value="<%= Assignment.Due %>" required>
                </div>

                <!-- Assignment Description -->
                <div class="mb-3">
                    <label for="descriptionTextArea" class="form-label">Assignment Description</label>
                    <textarea class="form-control" id="descriptionTextArea" placeholder="Enter the Assignment Description" name="Description" rows="4" required><%= Assignment.Description %></textarea>
                </div>

                <!-- Submit and Cancel Buttons -->
                <div class="d-flex justify-content-between">
                    <button class="btn btn-danger" type="submit">
                        <i class="fas fa-edit"></i> Submit
                    </button>
                    <a href="/assignmentslist" class="btn btn-secondary">
                        <i class="fas fa-undo"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>
